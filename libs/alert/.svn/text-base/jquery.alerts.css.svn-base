#popup_container {
	font-family: Arial, sans-serif; font-size: 12px; min-width: 300px; max-width: 600px; background: #191919;
	border: solid 2px #332; color: #999; border-radius: 5px;}

#popup_title {font-size: 14px; font-weight: bold; text-align: center; line-height: 1.75em; color: #aaa; background: #191919; cursor: default; padding: 4px; margin: 0em; border-bottom: 1px solid #333; font-family: 'Segoe UI'}

#popup_content {padding: 10px; margin: 0em;}

#popup_message {padding-left: 15px;}

#popup_panel {
	text-align: center;
	margin: 1em 0em 0em 1em;
}
#popup_container input[type=button] {padding: 3px 9px;}
#popup_prompt {margin: 7px 5px;}