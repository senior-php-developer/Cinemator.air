
/***********
 * BUTTONS *
 ***********/

button.black {background:  -webkit-gradient( linear,left top,left bottom,from(#444),to(#222)); padding: 5px 10px; color: #ddd; text-decoration: none; font-weight: bold; line-height: 1; border-radius: 5px; box-shadow: 0 1px 2px #000; text-shadow: 0 -1px 1px #222; border: 1px solid #444; border-bottom: 1px solid #333; position: relative; vertical-align: middle;}
button.black:hover {background: -webkit-gradient( linear,left top,left bottom,from(#666),to(#333)); color: #fff;}
button.black:active {background:-webkit-gradient( linear,left top,left bottom,from(#444),to(#222)); color: #fff;}

button.white {background: -webkit-gradient( linear,left top,left bottom,from(#ddd),to(aaa)); padding: 5px 10px; color: #666; text-decoration: none; font-weight: bold; line-height: 1; border-radius: 5px; box-shadow: 0 1px 2px #111; text-shadow: 0 1px 1px #ddd; border: 1px solid #999; border-bottom: 1px solid #aaa; position: relative; vertical-align: middle;}
button.white:hover {background: -webkit-gradient( linear,left top,left bottom,from(#eee),to(#bbb)); color: #333;}
button.white:active {background: -webkit-gradient( linear,left top,left bottom,from(#ddd),to(#aaa)); color: #333;}

input.search {border: 1px solid #888; border-radius: 4px; padding: 4px 8px; font-size: 12px; font-family: Verdana; background: -webkit-linear-gradient(#fff, #ddd); color: #555;}



/***********
 * DIALOGS *
 ***********/

#dialog {min-height: 95px !important;}
#dialog .btns {text-align: center; margin-top: 10px;}
#dialog h3 {font-size: 14px;}

#addList input, #renList input, #saveMusic input {font-size: 14px; padding: 2px; font-family: monospace; width: 97%; background: #ccc; border: 1px solid #aaa;}
#addList input:focus, #renList input:focus {background: #FFEFB2;}

#delList {font-size: 12px; margin: 5px;}

#loadMusic button, #saveMusic button {margin: 4px; width: 92px;}
#loadMusic p, #saveMusic p {color: #999999; font-size: 11px; margin: 10px 5px;}
#loadMusic textarea, #fileUpload textarea {height: 200px; width: 268px; font-size: 12px;}
#fileUpload textarea.highlighted {border: 1px solid #EDCF5A;}


#loadServer a {color: #959D3C; display: block; font-size: 13px; text-decoration: none; margin: 5px; padding-bottom: 5px; border-bottom: 1px dashed;}
#loadServer a:hover {color: #DEE855;}

#saveMusic input {width: 200px;}

#dialog .loading {width: 100%; height:100%; background: url(img/loader.gif) no-repeat center center;}


/************
 * OVERLAYS *
 ************/

#ovrl {width: 210px; height: 20px; background: #aaa; border-radius: 10px; padding: 30px 15px; font-family: 'Segoe UI', font-size: 14px; }
